<h1 style="text-align:center;">회원목록</h1>



<div class="container">

  <div class="row">
    <table class="table " style="text-align:center;">
      <thead>
        <tr>
          <th>회원ID</th>
          <th>Email</th>
          <th>생성일</th>
        </tr>
      </thead>
      <tbody>
      <%@users.each do |user|%>
        <tr>
          <th scope="row"><%=user.id%></th>
          <td><a href="/user/show/<%=user.id%>"><%=user.email%></a></td>
          <td><%=time_ago_in_words(user.created_at)%></td>
        </tr>
      <%end%>
      </tbody>
    </table>
  </div>
</div>
